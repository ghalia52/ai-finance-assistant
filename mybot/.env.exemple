# =========================
# DATABASE CONFIGURATION
# =========================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_ECHO=false
DB_DRIVER=postgresql+psycopg2

# Database Table Names
EXPENSES_TABLE_NAME=transactions

# Transaction Table Columns
TRANSACTION_ID_COLUMN=Transaction ID
TRANSACTION_DATE_COLUMN=Date
TRANSACTION_CURRENCY_COLUMN=Currency
TRANSACTION_SENDER_COLUMN=Sender
TRANSACTION_RECEIVER_COLUMN=Receiver
TRANSACTION_AMOUNT_COLUMN=Amount
TRANSACTION_FEE_COLUMN=Fee
TRANSACTION_TYPE_COLUMN=Type

# =========================
# GEMINI API CONFIGURATION
# =========================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ENABLED=true
GEMINI_MODEL=gemini-1.5-pro

# =========================
# FINANCE CONFIGURATION
# =========================
DEFAULT_STARTING_BALANCE=1200.0
DEFAULT_CATEGORY=misc
BUDGET_WARNING_THRESHOLD=0.8
CURRENCY_SYMBOL=$

# =========================
# APP CONFIGURATION
# =========================
APP_TITLE=AI Financial Assistant with Database
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# =========================
# CHAT CONFIGURATION
# =========================
MAX_CHAT_HISTORY=24
RECENT_CHAT_CONTEXT=6
RECENT_EXPENSES_LIMIT=5
MAX_EXPENSES_DISPLAY=10
DEFAULT_USER_ID=anon

# =========================
# SYSTEM MESSAGES
# =========================
SYSTEM_PROMPT=You are Finley, a friendly personal finance assistant. You can log expenses, set budgets, summarize spending, and answer general finance questions clearly and concisely. Always be practical and avoid giving legal or investment advice.

LLM_UNAVAILABLE_MESSAGE=I'm sorry, the AI model is not available right now. I can still help with basic finance operations like logging expenses and setting budgets.

LLM_ERROR_MESSAGE=I'm having trouble processing that request right now. Please try rephrasing or ask about your expenses or budgets.

AMOUNT_PARSE_ERROR_TEMPLATE=I couldn't find the amount. Try like: I spent {currency_symbol}12 on {default_category}.

BUDGET_PARSE_ERROR_TEMPLATE=I couldn't find the budget amount. Try: Set budget for {category} to {currency_symbol}200.

NO_EXPENSES_MESSAGE_TEMPLATE=No expenses logged yet. Try: I spent {currency_symbol}8 on {category}.

# =========================
# RESPONSE TEMPLATES
# =========================
BALANCE_RESPONSE_TEMPLATE=Your current balance is {currency_symbol}{balance}.

EXPENSE_LOGGED_TEMPLATE=Logged {currency_symbol}{amount} for {category}. New balance: {currency_symbol}{balance}.{warnings}

BUDGET_SET_TEMPLATE=Budget set for {category}: {currency_symbol}{amount}.

BUDGET_WARNING_TEMPLATE=You are close to your {category} budget ({currency_symbol}{limit_amount}). Spent: {currency_symbol}{spent}.

BUDGET_REACHED_TEMPLATE=You reached your {category} budget ({currency_symbol}{limit_amount}). Spent: {currency_symbol}{spent}.

SUMMARY_HEADER_TEMPLATE=Spending summary:
{spending_breakdown}
Balance: {currency_symbol}{balance}{warnings}

# =========================
# CSV IMPORT CONFIGURATION (Optional)
# =========================
CSV_PATH=./data/transactions.csv